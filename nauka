========================================= if ====================================================

#include <stdio.h>
#include <stdlib.h>


int main()
{
    int waga;
    float wzrost;
    printf("Podaj swoja wage (kg): ");
    scanf("%d", &waga);
    printf("Podaj swoj wzrost (m): ");
    scanf("%f", &wzrost);
    float BMI = waga / (wzrost * wzrost);
    printf("Twoje BMI wynosi: %.2f\n", BMI);
    if(BMI < 18.5)
    {
        printf("Niedowaga");
    }
    if(BMI >= 18.5 & BMI < 25)
    {
        printf("Waga prawidlowa");
    }
    if(BMI >= 25 & BMI < 30)
    {
        printf("Nadwaga");
    }
    if(BMI >= 30)
    {
        printf("Otylosc");
    }


    return 0;
}


=================================================DO WHILE============================================================

#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int i = 0;
int j = 0;
int a = 0;

int main()
{
     printf("Licznik liczb parzystych i nieparzystych\n");
    do
    {
    printf("napisz swoje liczby do zliczenia: ");
    scanf("%d", &a);
    if(a < 0)
    {
    continue;
    }
    if(a == 0)
    {
    break;
    }
    if(a % 2 == 0)
    {
        i += 1;
    }
    else
    {
        j += 1;
    }
    }while(a != 0);

    printf("Wpisałes 0, czyli zakonczyłes dzialanie programu\n");
    printf("Suma liczb parzystych: %d\nSuma liczb nieparzystych: %d",i,j);
    return 0;
}

